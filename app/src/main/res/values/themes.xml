<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.UrduTextToSpeech" parent="Theme.Material3.DayNight.NoActionBar">
    </style>

    <style name="navigationBarStyle">
        <item name="android:background">@color/navBarBackground</item>
        <item name="itemIconTint">@color/nav_item_color</item>
        <item name="itemTextColor">@color/nav_item_color</item>
    </style>

    <style name="fragmentContainerStyle">
        <item name="android:background">@color/white</item>
    </style>


    <!-- Home Screen coloring style -->

    <style name="homeScreenMainHeadingStyle">
        <item name="android:textColor">@color/headingText</item>
        <item name="android:drawableTint">@color/bellIcon</item>
    </style>

    <style name="homeScreenNotificationIcon">
        <item name="android:iconTint">@color/bellIcon</item>
    </style>

    <style name="homeScreenTextEditorCard">
        <item name="android:background">@color/white</item>
        <item name="android:strokeColor">@color/boarderOfTextEditor</item>
    </style>


    <style name="homeScreenTextActionIcon">
        <item name="android:iconTint">@color/textActionIcon</item>
    </style>

    <style name="noFilesPlaceholder">
        <item name="android:iconTint">@color/noFilePlaceHolder</item>
    </style>

    <style name="homeScreenRecentFilesHeading">
        <item name="android:textColor">@color/recentFileText</item>
    </style>

    <style name="homeScreenTextEditorStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/textInEditText</item>
        <item name="android:textColorHint">@color/placeHolderText</item>
        <item name="android:background">@color/textEditorBackground</item>
    </style>



    <!-- Voice Popup coloring styles -->


    <style name="voicePopupBackground">
        <item name="android:background">@drawable/bg_popup</item>
    </style>

    <style name="voiceMenuHeading">
        <item name="android:textColor">@color/voiceMenuHeading</item>
        <item name="android:drawableTint">@color/voiceMenuHeading</item>
    </style>

    <style name="Theme.UrduTextToSpeech" parent="Base.Theme.UrduTextToSpeech"/>
</resources>