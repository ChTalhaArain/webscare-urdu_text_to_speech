<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:fillViewport="true"
       tools:context=".fragments.Home"
       android:padding="16dp"
       style="@style/fragmentContainerStyle">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="4dp">

            <TextView
                    android:id="@+id/titleText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/homeScreenMainHeadingStyle"
                    android:text="Urdu Text to Speech"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            <ImageView
                    android:id="@+id/notificationIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    style="@style/homeScreenNotificationIcon"
                    android:src="@drawable/ic_notification_button"
                    android:contentDescription="Notifications" />
        </LinearLayout>

        <!-- ========== CARD AREA ========== -->
        <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                style="@style/homeScreenTextEditorCard"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                android:padding="8dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/fragmentContainerStyle"
                    android:orientation="vertical">

                <!-- EDIT TEXT AREA -->
                <EditText
                        android:id="@+id/inputText"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.40"
                        android:minHeight="250dp"
                        android:gravity="top|start"
                        android:hint="یہاں سے شروع کریں..."
                        android:textDirection="rtl"
                        android:padding="10dp"
                        style="@style/fragmentContainerStyle"
                        android:textSize="18sp"
                        android:maxLines="10" />

                <!-- ICON BAR -->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginHorizontal="12dp"
                        android:orientation="horizontal"
                        style="@style/fragmentContainerStyle"
                        android:gravity="center_vertical">

                    <!-- Left icons -->
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/homeScreenTextActionIcon"
                            android:src="@drawable/ic_delete_button"
                            android:layout_marginEnd="16dp" />

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_undo_button"
                            style="@style/homeScreenTextActionIcon"
                            android:layout_marginEnd="16dp" />

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_redo_button"
                            style="@style/homeScreenTextActionIcon"
                            android:layout_marginEnd="16dp" />

                    <!-- Spacer -->
                    <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                    <!-- Right icon -->
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_copy_button"
                            style="@style/homeScreenTextActionIcon"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ========== PLAY BUTTON ========== -->
        <ImageView
                android:id="@+id/playButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_play_button"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp" />

        <!-- ========== RECENT FILES HEADING ========== -->
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recent Files"
                style="@style/homeScreenRecentFilesHeading"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp" />

        <!-- PLACEHOLDER WHEN NO FILES -->
        <ImageView
                android:id="@+id/placeholder"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                style="@style/noFilesPlaceholder"
                android:src="@drawable/ic_empty_list_placeholder"
                android:layout_marginTop="16dp"
                android:visibility="visible" />

        <!-- RECYCLER VIEW FOR FILES -->
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerFiles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="gone" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
